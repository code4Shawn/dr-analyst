<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.genedev.retinalclassifierfull.Activities.About">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="@dimen/app_bar_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:elevation="6dp"
                    />
                <TextView
                    android:layout_below="@+id/img_view"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/app_bar_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="DR Analyst"/>
                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/app_bar_headline"
                    android:id="@+id/app_bar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diabetic Retinopathy Analyst (Version 2.3.16)"/>
                <RelativeLayout
                    android:layout_below="@+id/app_bar_subtitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="@color/white"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back_white_48dp"
            android:backgroundTint="@color/white"
            android:onClick="back" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:id="@+id/card1">
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/i_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7sp"
                        android:tint="@color/colorPrimary"
                        android:src="@mipmap/ic_polymer"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/i_1"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gene Diether Rodriguez"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/subhead"
                            android:layout_below="@+id/headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Head Developer"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:layout_below="@+id/card1"
                android:id="@+id/card2">
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/i_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:padding="7sp"
                        android:src="@mipmap/ic_file_document_box_outline"
                        android:tint="@color/colorPrimary" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/i_2"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daniel Pacite"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/subhead1"
                            android:layout_below="@+id/headline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documentation"
                            android:textAllCaps="true"
                            android:textSize="10sp"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:id="@+id/card3"
                android:layout_below="@+id/card2">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/headline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back-End Services"
                        android:textSize="14sp"/>
                    <RelativeLayout
                        android:id="@+id/rell1"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headline3">
                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="centerCrop"
                            android:padding="7dp"
                            android:src="@mipmap/ic_tensorflow"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:layout_toRightOf="@+id/image1"
                            android:id="@+id/subhead3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tensorflow"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_toRightOf="@+id/image1"
                            android:id="@+id/subhead4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Image Recognition API used to analyze \nretinal images."
                            android:textSize="10sp"
                            android:layout_below="@+id/subhead3"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rell2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rell1">
                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_firebase"/>
                        <TextView
                            android:layout_toRightOf="@+id/image2"
                            android:id="@+id/subhead5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Firebase"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_toRightOf="@+id/image2"
                            android:id="@+id/subhead6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Authentication, Realtime Database, Analytics \nand Hosting."
                            android:textSize="10sp"
                            android:layout_below="@+id/subhead5"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rell3"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rell2">
                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="centerCrop"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:src="@mipmap/ic_dialogflow"/>
                        <TextView
                            android:layout_toRightOf="@+id/image3"
                            android:id="@+id/subhead9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dialogflow"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_toRightOf="@+id/image3"
                            android:id="@+id/subhead13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Natural and rich conversational experience\nfor DR Assistant."
                            android:textSize="10sp"
                            android:layout_below="@+id/subhead9"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rell4"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rell3">
                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="4dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_play_services"/>
                        <TextView
                            android:layout_toRightOf="@+id/image4"
                            android:id="@+id/subhead7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Play Services"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_toRightOf="@+id/image4"
                            android:id="@+id/subhead8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Google Play Services must be updated for \nFirebase Authentication to work."
                            android:textSize="10sp"
                            android:layout_below="@+id/subhead7"
                            />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:id="@+id/card5"
                android:layout_below="@+id/card3">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact and Support"
                        android:textSize="14sp"/>
                    <RelativeLayout
                        android:id="@+id/rell5"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headline6">

                        <ImageView
                            android:id="@+id/image6"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerVertical="true"
                            android:paddingBottom="7dp"
                            android:paddingEnd="7dp"
                            android:paddingStart="3dp"
                            android:paddingTop="7dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/facebook_box"
                            android:tint="@color/colorPrimary" />

                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/image6">

                            <TextView
                                android:id="@+id/subhead11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Facebook"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/subhead12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/subhead11"
                                android:layout_marginStart="5dp"
                                android:text="web.facebook.com/dr.analyst/"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rell7"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rell5">

                        <ImageView
                            android:id="@+id/image7"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/outline_email_black_48dp"
                            android:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/subhead14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_toRightOf="@+id/image7"
                            android:text="Email"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/subhead15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/subhead14"
                            android:layout_marginStart="13dp"
                            android:layout_toRightOf="@+id/image7"
                            android:text="dranalystcontactservice@gmail.com"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
