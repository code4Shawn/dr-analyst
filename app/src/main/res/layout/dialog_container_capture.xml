<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppThemeNoActionBarColoredDark"
    android:background="@color/colorPrimary"
    tools:context=".Activities.ClassifierImport">

    <RelativeLayout
        android:background="@color/cardview_light_background"
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_warn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@drawable/ic_center_focus_weak_white_48dp"
            android:tint="@color/colorAccent" />

        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@+id/img_warn"
            android:text="You need an indirect lens to magnify patient's retina."
            android:textColor="@color/primaryText"
            android:textSize="16sp" />
    </RelativeLayout>


    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dialog_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Ok"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>